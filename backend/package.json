{
	"name": "product-catalog",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"db:up": "docker compose -f docker-compose.yaml up -d",
		"db:down": "docker compose -f docker-compose.yaml down",
		"drizzle:generate": "drizzle-kit generate",
		"drizzle:migrate": "drizzle-kit migrate",
		"db:migrate": "npm run drizzle:generate && npm run drizzle:migrate",
		"dev": "npm run db:up && npm run db:migrate && tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/src/index.js",
		"test": "vitest"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.0",
		"@hono/zod-openapi": "^1.1.0",
		"@scalar/hono-api-reference": "^0.9.15",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.45.1",
		"drizzle-zod": "^0.8.3",
		"hono": "^4.9.4",
		"hono-pino": "^0.10.2",
		"pg": "^8.16.3",
		"pino": "^9.9.0",
		"pino-pretty": "^13.1.1",
		"stoker": "^2.0.1",
		"zod": "^4.1.1"
	},
	"devDependencies": {
		"@types/node": "^20.11.17",
		"@types/pg": "^8.16.0",
		"drizzle-kit": "^0.31.8",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}
